<% if user_signed_in? %>
  <% unless @burger.user == current_user %>
    <div class="card bg-info bg-opacity-10 border-0 rounded-4 p-4">
      <h2>Book now!</h2>

      <form action="burgers/<%= @burger.id %>/bookings" method="POST">
        <div data-calendar-target="form" data-controller="calendar">
          <input type="text" name="start_date" autocomplete="off">
          <input type="text" name="end_date" autocomplete="off">
        </div>
        <input type="submit" value="Book" class="button-main button-book">
      </form>
    </div>
  <% end %>
<% else %>
  <p class="text-secondary">You need to be logged in to make a booking</p>
  <%= link_to "Login", new_user_session_path, class: "btn btn-outline-info rounded-4" %>
<% end %>
