<div class="container my-4">
  <div class="row">
    <div class="col-8 d-flex align-content-center">
      <%= image_tag "veggie_burg", width: "100%", style:"object-fit: cover", class: "rounded-4" %>
    </div>
    <div class="col-4 p-4 background-white rounded-4 shadow-sm">
      <h1>Add a new burger</h1>
      <%= simple_form_for(@burger) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photos,
                    label: "One or more photos of your burger 🍔",
                    as: :file,
                    input_html: { multiple: true }  %>
        <%= f.button :submit, "Add your burger" %>
      <% end %>
    </div>
  </div>
</div>
