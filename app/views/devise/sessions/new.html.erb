<div class="container my-4">
  <div class="row">
    <div class="col-sm-8 col-lg-4 p-4 background-white rounded-4 shadow-sm">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-sm-4 col-lg-8 d-flex align-content-center">
      <%= image_tag "chicky_burg.png", width: "100%", style:"object-fit: cover", class: "rounded-4 hidable" %>
    </div>
  </div>
</div>
